{
  "name": "service-center-app",
  "private": true,
  "version": "2026.26.6",
  "description": "Service Center Management Application",
  "author": "Service Center Team",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "version-update": "node scripts/update-version.js",
    "prebuild": "npm run version-update",
    "prebuild:linux": "npm run version-update",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=2048 npm run build:linux",
    "build:all": "cross-env NODE_OPTIONS=--max-old-space-size=2048 tsc && vite build && electron-builder",
    "build:gentle": "cross-env NODE_OPTIONS=--max-old-space-size=1536 tsc && vite build && electron-builder --linux AppImage",
    "build:win": "cross-env NODE_OPTIONS=--max-old-space-size=2048 tsc && vite build && electron-builder --win portable",
    "build:linux": "cross-env NODE_OPTIONS=--max-old-space-size=2048 tsc && vite build && electron-builder --linux AppImage",
    "build:linux:appimage": "tsc && vite build && electron-builder --linux AppImage",
    "build:linux:deb": "tsc && vite build && electron-builder --linux deb",
    "build:linux:rpm": "tsc && vite build && electron-builder --linux rpm",
    "build:linux:tar": "tsc && vite build && electron-builder --linux tar.gz",
    "build:linux:snap": "tsc && vite build && electron-builder --linux snap",
    "build:linux:flatpak": "tsc && vite build && electron-builder --linux flatpak",
    "build:linux:all": "tsc && vite build && electron-builder --linux",
    "build:clean": "rm -rf dist dist-electron release && npm run build",
    "build:ts": "tsc",
    "build:frontend": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.11",
    "@types/lodash-es": "^4.17.12",
    "better-sqlite3": "^12.4.6",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "fuse.js": "^7.1.0",
    "lodash-es": "^4.17.22",
    "lucide-react": "^0.555.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^2.12.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.3"
  },
  "main": "dist-electron/main.js"
}
